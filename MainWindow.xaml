<Window x:Class="DropFiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DropFiles"
        mc:Ignorable="d"
        Title="DropFiles" Height="450" Width="400"
        AllowDrop="True" PreviewDragOver="Window_PreviewDragOver" Drop="Window_Drop">
    <Grid>
        <ListBox Name="FileList" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" 
                 AllowDrop="True" PreviewMouseLeftButtonDown="FileList_PreviewMouseLeftButtonDown" Margin="10,10,10,10"/>

    </Grid>
</Window>
