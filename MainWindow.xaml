<Window x:Class="DropFiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DropFiles"
        mc:Ignorable="d"
        Title="DropFiles" Height="450" Width="400"
        AllowDrop="True"
        PreviewDragEnter="Window_PreviewDragEnter"
        Drop="Window_Drop"
        DragLeave="Window_DragLeave">
    <Grid>
        <!-- 主内容区域 -->
        <Grid>
            <ListBox Name="FileList" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" 
                     AllowDrop="True" PreviewMouseLeftButtonDown="FileList_PreviewMouseLeftButtonDown"/>
        </Grid>

        <!-- 拖放提示覆盖层 -->
        <Grid Name="DropHintOverlay" Visibility="Collapsed" Background="#80000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock Text="拖放到此处" FontSize="24" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
